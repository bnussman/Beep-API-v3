{
    "entryFile": "src/app.ts",
    "noImplicitAdditionalProperties": "throw-on-extras",
    "controllerPathGlobs": ["src/**/routes.ts"],
    "spec": {
        "outputDirectory": "build",
        "specVersion": 3,
        "securityDefinitions": {
            "token": {
                "type": "apiKey",
                "name": "Authorization",
                "in": "header"
            }
        },
        "paths": {
            "/files/upload": {
                "post": {
                    "consumes": [
                        "multipart/form-data"
                    ],
                    "parameters": [
                        {
                            "in": "formData",
                            "name": "randomFileIsHere",
                            "required": true,
                            "type": "file"
                        }
                    ]
                }
            }
        },
        "host": "ridebeep.app",
        "basePath": "/v1"
    },
    "routes": {
        "routesDir": "build",
        "authenticationModule": "src/utils/authentication.ts"
    },
    "ignore": [
        "**/node_modules/@sentry/**",
        "**/node_modules/@types/express-serve-static-core/**"
    ] 
}
